mid-gray = #747275
dark-gray = #3a3a3e
blue-gray = #c7ced8
light-gray = #a7a6a4
darkest-gray = #0d0d0f

body
  background blue-gray

  a
    text-decoration none
    cursor pointer
    color inherit

  textarea
    resize none

  header
    padding .5rem 3rem
    display flex
    justify-content space-between
    align-items center
    background light-gray
    color white

    h1
      font-size 1.5rem
      font-weight normal

    .header-buttons
      a
        margin-left 2rem
        font-size 1rem

        &#login
          &:hover, &:active, &:focus
            color dark-gray

        &#shame
          &:hover, &:active, &:focus
            color dark-gray

  section
    display flex
    flex-direction column
    align-items center

    .blob, #comment, .comment
      color darkest-gray
      background white
      width 60%
      border 1px solid darkest-gray
      border-radius 10px
      margin 3rem 0 0 0
      padding 1rem
      text-align center
      overflow hidden

    textarea
      font-size 1rem
      width 100%
      height 5rem
      margin 0
      border 0
      padding 0

    #comment
      display flex
      flex-direction column
      align-items flex-end
      width 50%
      height 6rem
      padding 0

      textarea
        padding 1rem 1rem 0 1rem
        border-bottom 1px solid darkest-gray

      a#comment-submit
        margin-right 1rem
        color light-gray

    .comment
      height 5rem
      font-size 1rem
      width 50%
